{
  "name": "certificate-dapp-monorepo",
  "version": "1.0.0",
  "description": "Digital Certificate DApp with Solidity, React, and Node.js",
  "private": true,
  "workspaces": [
    "smart_contract",
    "client",
    "server"
  ],
  "scripts": {
    "install:all": "npm install && cd smart_contract && npm install && cd ../client && npm install && cd ../server && npm install",
    "contract:compile": "cd smart_contract && npm run compile",
    "contract:deploy": "cd smart_contract && npm run deploy",
    "contract:test": "cd smart_contract && npm run test",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "dev": "concurrently \"npm run contract:compile\" \"npm run server:dev\" \"npm run client:dev\"",
    "clean": "rm -rf node_modules smart_contract/node_modules client/node_modules server/node_modules"
  },
  "keywords": [
    "blockchain",
    "certificate",
    "dapp",
    "ethereum",
    "solidity",
    "react",
    "ipfs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
